<br>
<div class='container'>
  <ul class="tabs" data-tab>
    <li class="tab-title active"><a href="#panel1">Client Login</a></li>
    <li class="tab-title"><a href="#panel2">Provider Login</a></li>
  </ul>
  <hr>
  <div class="tabs-content">
    <div class="content active" id="panel1">
      <h3 class="small-9 columns small-centered center">Client Login</h3>
      <div class="panel small-9 columns small-centered clearfix">
        <div class="panel small-12">
          UserName
          <%#= form_for([@user]) do |f| %>
            <%#= f.select(:client_id, @client.collect {|c| [c.full_name, c.id] }, {:include_blank => 'Select a client'}, required: true) %>
            <%#= f.submit %>
          <%# end %>
        </div>
        <div class="panel small-12">
          Password
        </div>
        <div class='row'>
          <div class= 'small-6 columns'><input type='checkbox'> <em>Remember Me</em> </div>
          <div class= 'small-6 columns pull-right'> <u>Forgot Password?</u> </div>
        </div><br>
        <div class="center">
          <a href="client/mock_login" class="button success">SIGN IN</a>
        </div>
      </div>
    </div>

    <div class="content" id="panel2">
      <h3 class="small-9 columns small-centered center">Provider Login</h3>
      <div class="panel small-9 columns small-centered clearfix">
        <div class="panel small-12">
          UserName
          <%#= form_tag([@user]) do |f| %>
            <%#= form_tag.select(:provider_id, @provider.collect {|p| [p.full_name, p.id] }, {:include_blank => 'Select a provider'}, required: true) %>
            <%#= f.submit %>
          <%# end %>
        </div>
        <div class="panel small-12">
          Password
        </div>
        <div class='row'>
          <div class= 'small-6 columns'><input type='checkbox'> <em>Remember Me</em> </div>
          <div class= 'small-6 columns pull-right'> <u>Forgot Password?</u> </div>
        </div>
        <br>
        <div class="center">
          <a href="provider/mock_login" class="button success">SIGN IN</a><br>
          <div><h4><em>or</em></h4></div><br>
          <a href="provider/mock_login" class="button success">Sign In with LinkedIn</a>
        </div>
      </div>
    </div>
  </div>
</div>
