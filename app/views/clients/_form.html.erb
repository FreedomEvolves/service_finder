    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, required: true %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select(:gender, Client.gender_options.collect {|g| [g] }, {:include_blank => 'Please indicate your gender'}, required: true) %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br>
    <%= f.date_select :date_of_birth, start_year: 1945, end_year: 2015 %>
  </div>
  <div class="field">
    <%= f.label :apartment_or_building %><br>
    <%= f.text_field :address1 %>
  </div>
  <div class="field">
    <%= f.label :street_address %><br>
    <%= f.text_field :address2 %>
  </div>
  <div class='row'>
    <div class="small-12 medium-6 columns">
      <%= f.label :gender %>
      <%= f.select(:gender, Client.gender_options.collect {|g| [g] }, {:include_blank => 'Please indicate your gender'}, required: true) %>
    </div>
    <div class="small-12 medium-6 columns">
      <%= f.label :date_of_birth %>
      <%= f.date_select :date_of_birth, start_year: 1945, end_year: 2015 %>
    </div>
  </div>
  <div class='row'>
    <div class="small-12 medium-6 columns">
      <%= f.label :apartment_or_building %>
      <%= f.text_field :address1 %>
    </div>
    <div class="small-12 medium-6 columns">
      <%= f.label :street_address %>
      <%= f.text_field :address2 %>
    </div>
  </div>
  <div class='row'>
    <div class="small-12 medium-6 columns">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="small-12 medium-6 columns">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
  </div>
  <div class='row'>
    <div class="small-12 medium-6 columns">
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="small-12 medium-6 columns">
      <%= f.label :country %>
      <%= f.select(:country, Client.country_options.collect {|c| [c] }, include_blank: 'Please inculde your country', required: true) %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'SignUp' %>
  </div>
<% end %>
