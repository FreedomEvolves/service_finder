<%= form_for @current_user.account, remote: true do |f| %>
<br>
  <div class='small-4 columns'>
    <% if @current_user.account.id < 6 %>
      <%= image_tag "#{@current_user.last_name}.jpg", title: @current_user.full_name, class: 'profile'%>
    <% else %>
      <%= image_tag "#{ Faker::Avatar.image(@current_user.full_name, '130x130') }", title: @current_user.full_name, class: 'profile' %>
    <% end %>
  </div>
  <div class='small-8 columns'>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.text_field :address1 %>
    <%= f.text_field :address2 %>
    <%= f.text_field :city %>
    <%= f.text_field :state %>
    <%= f.text_field :postal_code %>
    <%= f.text_field :country %>
  </div>
  <div>
   <%= f.submit 'Update Profile' %>
  </div>

    <h6><%#= @current_user.full_name%></h6>
    <h6><%#= @current_user.address%></h6>

<% end %>
